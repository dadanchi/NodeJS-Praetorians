mixin nav()
    if user
        form(action="/auth/sign-out" method="get")
            button.btn.btn-danger#register-btn
                | sign-out
        ul.nav.nav-tabs(role='tablist')
            li.active
                a(href="/")
                    | Home
            li
                a(href='/topics')
                    | All Topics
            li
                a(href=`/:users=${user.username}`)
                    =user.username
            li
                form(action='/topics/filtered' method="get")
                    input#myInput(type='text', name='input' value='asd', placeholder='Search for topic..')
                    button
                        | Search

    else
        ul.nav.nav-tabs(role='tablist')
            li.active
                a(href="/")
                    | Home
            li
                a(href='/topics')
                    | All Topics
            form(action="/auth/sign-in" method="get")
                button.btn.btn-success#logout-btn
                    | Sign In
            form(action='/topics/filtered' method="get")
                input#myInput(type='text', name='input' value='asd', placeholder='Search for topic..')
                button
                    | Search

