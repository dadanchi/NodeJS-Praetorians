extends ../_shared/_master
include ../_shared/_showPosts

block body
    h1
        ='The profile of '
        span#profile-name
            =context.username
    div#user-info
        div#profile-image
            img#profile-pic(src='/static/css/images/default-profile.jpg')
        div#profile-info
            h3
                | About me
            h4
                ul
                    if context.firstname
                        li
                            | First name: 
                            =context.firstname
                    if context.lastname
                        li
                            | Last name: 
                            =context.lastname
                    if context.town
                        li
                            | Town: 
                            =context.town
                    li
                        | Register Date:
                        =context.regDate
                button.btn.btn-success#posts-show-btn
                    | Show posts
                button.btn.btn-danger#posts-hide-btn
                    | Hide post
            if user && context.username === user.username
                form(action=`/users/:user=${user.username}/updateProfil`, method='get')
                    button.btn.btn-primary#btn-update-profile
                        | Update profil
    div#user-posts
        +showPosts()