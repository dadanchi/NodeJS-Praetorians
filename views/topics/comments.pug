extends ../_shared/_master
block body
    h1
        = topic.title
    div.description
        = topic.content
    if topic.comments
        each comment in topic.comments
            div.comment
                = comment.content
            p.author
                = comment.author
    if user
        form(action=`/topics/:title=${topic.title}/comments` method='post')
            textarea.form-control(name='comment' placeholder='Add a comment')
            button.btn.btn-success
                | Submit