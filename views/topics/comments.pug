extends ../_shared/_master
include ../_shared/_pageChange
include ../_shared/_modifyPost

block body

    h1
        = topic.title
    //- div.description
    //-     = topic.content
    //- if topic.comments
    h3
        ='Comments'
    each comment in topic.comments

        div.comment
            = comment.content
        div.author
            span
                ='Written by '
            a(href=`/users/:user=${comment.author}`)
                =comment.author
            p.date-row
                =comment.date
            +modifyPost()
    +page(topic.comments.length)
    if user
        form(action=`/topics/:title=${topic.title}/comments` method='post')
            textarea.form-control(name='comment' placeholder='Add a comment')
            button.btn.btn-success
                | Submit